<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="25dp"
        android:text="@string/padding" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/ibAddSch"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/addsch" />

        <ImageButton
            android:id="@+id/ibDelSch"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/deletesch" />

        <ImageButton
            android:id="@+id/ibChkSch"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/checksch" />
        
        <ImageButton
            android:id="@+id/ibEditSch"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/editsch" />
        
        <ImageButton
            android:id="@+id/ibDelAllSch"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/deleteall" />
        
        <ImageButton
            android:id="@+id/ibSearchSch"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/searchsch" />
    </LinearLayout>
        
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/curSchedules" />


    <ListView
        android:id="@+id/lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </ListView>

    

</LinearLayout>
